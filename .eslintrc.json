{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": "warn",
    "react/react-in-jsx-scope": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unsafe-assignment": "warn",
    "@typescript-eslint/no-unsafe-member-access": "warn",
    "@typescript-eslint/no-unsafe-call": "warn",
    "@typescript-eslint/no-unsafe-return": "warn",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "property",
        "format": ["camelCase", "snake_case"], // permite ambos, pero camelCase es est√°ndar frontend
        "filter": {
          "regex": "^(className|onClick|onChange|onSubmit|onFocus|onBlur|defaultValue|autoComplete|tabIndex|aria-.*)$",
          "match": false
        }
      },
      {
        "selector": "variable",
        "format": ["camelCase", "UPPER_CASE", "PascalCase", "snake_case"], // permite camelCase y snake_case
        "filter": {
          "regex": "^(React|Component|useState|useEffect|useCallback|useMemo|useRef|useContext|useReducer|useImperativeHandle|useLayoutEffect|useDebugValue)$",
          "match": false
        }
      },
      {
        "selector": "function",
        "format": ["camelCase", "PascalCase", "snake_case"], // permite camelCase y snake_case
        "filter": {
          "regex": "^(React|Component)$",
          "match": false
        }
      },
      {
        "selector": "typeLike",
        "format": ["PascalCase"]
      },
      {
        "selector": "interface",
        "format": ["PascalCase"]
      },
      {
        "selector": "typeAlias",
        "format": ["PascalCase"]
      },
      {
        "selector": "enum",
        "format": ["PascalCase"]
      },
      {
        "selector": "enumMember",
        "format": ["UPPER_CASE"]
      }
    ]
  }
}
